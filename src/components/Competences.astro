---
const logos = import.meta.glob('/public/assets/icons/*.svg', { eager: true });
const logoPaths = Object.keys(logos);

// Mélange aléatoirement les logos
const shuffledLogos = [...logoPaths].sort(() => Math.random() - 0.5);
---

<section class="competences-container">
    <h2 class="section-title">Mes Compétences</h2>

    <div class="logos-container">
        {shuffledLogos.map((path, index) => (
                <div class="logo-wrapper" data-index={index}>
                    <img src={path} class="logo" />
                    <div class="logo-name">{path.split('/').pop().split('.')[0]}</div>
                </div>
        ))}
    </div>
</section>

<style>
    .competences-container {
        padding: 1rem;
        text-align: center;
    }

    .section-title {
        font-size: 2.8rem;
        margin-bottom: 2rem;
        color: var(--text-color);
    }

    .logos-container {
        display: flex;
        flex-wrap: wrap; /* pour aller à la ligne si trop de logos */
        gap: 30px;
        justify-content: center;
        padding: 1rem;
        width: 90%;
        margin: 0 auto;
    }

    .logo-wrapper {
        text-align: center;
        position: relative;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        border: 2px solid #28a745;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(40, 167, 69, 0.3);
        padding: 15px;
        width: 100px;
        height: 100px;
        background-color: white; /* Optionnel */
    }

    .logo {
        width: 50px;
        height: 50px;
        margin-bottom: 10px;
    }

    .logo-name {
        font-size: 14px;
        color: var(--text-color);
        word-break: break-word;
    }
</style>
