---
const logos = import.meta.glob('/assets/svg/*.svg', { eager: true });
const logoPaths = Object.entries(logos).map(([path, module]) => module.default || path);

// Fonction pour diviser en lignes de 6
function splitIntoRows(array, size) {
    const rows = [];
    for (let i = 0; i < array.length; i += size) {
        rows.push(array.slice(i, i + size));
    }
    return rows;
}

const logoRows = splitIntoRows(logoPaths, 6);
---

<section class="competences-container">
    <h2 class="section-title">Mes Comp√©tences</h2>

    <div class="logos-container">
        {logoRows.map((row, rowIndex) => (
                <div class="logo-row" key={rowIndex}>
                    {row.map((path, index) => (
                            <div class="logo-wrapper" key={rowIndex * 6 + index}>
                                <img src={path} class="logo" alt={path.split('/').pop().split('.')[0]} loading="lazy" />
                                <div class="logo-name">{path.split('/').pop().split('.')[0]}</div>
                            </div>
                    ))}
                </div>
        ))}
    </div>
</section>

<style>
    .competences-container {
        padding: 1rem;
        text-align: center;
    }

    .section-title {
        font-size: 2.8rem;
        margin-bottom: 2rem;
        color: var(--text-color);
    }

    .logos-container {
        display: flex;
        flex-direction: column;
        gap: 30px;
        align-items: center;
        padding: 1rem;
        width: 90%;
        margin: 0 auto;
    }

    .logo-row {
        display: flex;
        gap: 30px;
        justify-content: center;
        flex-wrap: wrap;
    }

    .logo-wrapper {
        text-align: center;
        position: relative;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        border: 2px solid #28a745;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(40, 167, 69, 0.3);
        padding: 15px;
        width: 100px;
        height: 100px;
        background-color: white;
    }

    .logo {
        width: 50px;
        height: 50px;
        margin-bottom: 10px;
        object-fit: contain;
    }

    .logo-name {
        font-size: 14px;
        color: var(--text-color);
        word-break: break-word;
    }
</style>
