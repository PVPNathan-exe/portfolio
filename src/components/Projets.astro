    }

    .project-card.active {
        transform: translate(-50%, -50%) scale(1);
        left: 50%;
        opacity: 1;
        z-index: 3;
        border: 4px solid transparent;
    }

    .project-link {
        text-decoration: none;
        color: inherit;
    }

    .project-image {
        width: 100%;
        height: 180px;
        object-fit: cover;
        border-radius: 10px;
        transition: transform 0.3s ease;
    }

    .project-title {
        font-size: 1.8rem;
        margin-top: 1rem;
    }

    .project-description {
        font-size: 1rem;
        margin-top: 0.5rem;
        color: #666;
    }

    /* Footer : "Voir plus" ou "Privé" */
