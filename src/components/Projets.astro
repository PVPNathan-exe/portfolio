        margin-top: 1rem;
        font-size: 1rem;
        color: #28a745;
        font-weight: bold;
    }

    /* Hover effet */
    .project-card.active:hover .project-image {
        transform: scale(1.05);
    }

    /* Carousel buttons */
    .carousel-btn {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        background: rgba(0, 0, 0, 0.5);
        border: none;
        font-size: 2rem;
        color: white;
        padding: 0.5rem;
        cursor: pointer;
        border-radius: 50%;
        z-index: 10;
